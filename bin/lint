#!/bin/bash
set -e
source .venv-py2/bin/activate
echo "Python 2"
find setup.py charmworldlib tests -type f \( -iname '*.py' ! -iname '__init__.py' \) -print0 | xargs -r0 flake8
echo "Python 3"
source .venv-py3/bin/activate
find setup.py charmworldlib tests -type f \( -iname '*.py' ! -iname '__init__.py' \) -print0 | xargs -r0 flake8
